{
  "compilerOptions": {
    "target": "ES2020",             
    "module": "ESNext",           
    "outDir": "./dist",             
    "rootDir": "./src",            
    "strict": true,                 
    "esModuleInterop": true,        
    "skipLibCheck": true,           
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
