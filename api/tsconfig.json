{
  "compilerOptions": {
    "target": "ES2020",             
    "module": "CommonJS",           
    "outDir": "./dist",             
    "rootDir": "./src",   
    // "baseUrl": "./",         // <-- add baseUrl
    "strict": true,                 
    "esModuleInterop": true,        
    "skipLibCheck": true,           
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"],
    "emitDecoratorMetadata": true, 
    "experimentalDecorators": true, 
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}